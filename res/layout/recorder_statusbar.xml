<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/player_status"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center_vertical"
	android:paddingRight="7dip"
	android:background="#00000000"
	> 

	<ImageView
		android:id="@+id/recorder_icon"
		android:layout_width="64dip"
		android:layout_height="match_parent"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true" 
		android:gravity="center"
		android:scaleType="center"
		/>

	<RelativeLayout
		android:id="@+id/status_control"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		>   

		<ImageView
			android:id="@+id/status_btn_stop"			
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"			
			android:src="@drawable/statusbar_stop_selector"
			android:layout_centerVertical="true"
			android:paddingRight="@dimen/status_btnpadding"
			 />

		<ImageView
			android:id="@+id/status_btn_pause"			
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/status_btn_stop"
			android:src="@drawable/statusbar_pause_selector"
			android:layout_centerVertical="true"
			android:paddingRight="@dimen/status_btnpadding"
			 />
			 

		<ImageView
			android:id="@+id/status_btn_cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/statusbar_cancel_selector"
			android:layout_toRightOf="@id/status_btn_pause"
			android:layout_centerVertical="true"
			 />
			
	</RelativeLayout>
	

	<LinearLayout
		android:id="@+id/status_info"
		android:layout_toRightOf="@id/recorder_icon"
		android:layout_toLeftOf="@id/status_control"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		
		android:paddingRight="8dip"		
		android:layout_centerVertical="true"
		android:orientation="vertical" 
		android:weightSum="2"
		>

		<TextView
			android:id="@+id/recorder_app"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:singleLine="true"
			android:ellipsize="end"
			android:textSize="14sp"
			android:textColor="@color/white_text"
			android:layout_weight="1"
			android:gravity="bottom"
			/>

		<TextView
			android:id="@+id/status_text"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:singleLine="true"
			android:ellipsize="end"
			android:textSize="12sp" 
			android:layout_weight="1"
			android:gravity="top" 
			android:textColor="@color/white_translucence_text"
			/>
		

	</LinearLayout>

	

</RelativeLayout>
